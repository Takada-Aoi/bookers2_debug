<% book.book_comments.each do |book_comment| %>
  <%= attachment_image_tag book_comment.user,:profile_image,:fiii,40,40,fallback:"no_image.jpg" %>
    <p><%= book_comment.comment %></p>
    <p>
      <% if book_comment.user == current_user %>
        <%= link_to "delete",book_book_comment_path(book_comment.book,book_comment),method: :delete,remote: true %>
      <% end %>
    </p>
 <% end %>