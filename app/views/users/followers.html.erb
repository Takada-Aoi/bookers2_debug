<h1>Follower Users</h1>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @users.presence %>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td>
          フォロワー数：<%= user.followers.count %>
        </td>
        <td>
          フォロー数：<%= user.followed.count %>
        </td>
         <td>
          <%= link_to 'Show',user_path(user.id) %>
        </td>
      </tr>
    <% end %>
    <% else %>
    <td>ユーザーはいません</td>
    <% end %>
  </tbody>
</table>